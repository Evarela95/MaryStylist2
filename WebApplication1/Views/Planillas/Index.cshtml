@model IEnumerable<WebApplication1.Models.Planilla>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Lista de Planillas</h2>

    <p>
        @Html.ActionLink("Crear Nueva Planilla", "Create", new { @class = "btn btn-primary" })
    </p>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th style="text-align: center;">@Html.DisplayNameFor(model => model.Fecha_Ingreso)</th>
                <th style="text-align: center;">@Html.DisplayNameFor(model => model.Salario)</th>
                <th style="text-align: center;">@Html.DisplayNameFor(model => model.Especializacion)</th>
                <th style="text-align: center;">Empleado</th>
                <th style="text-align: center;">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Fecha_Ingreso)</td>
                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Salario)</td>
                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Especializacion)</td>
                    <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Empleados.Nombre_Empleado)</td>
                    <td style="text-align: center;">
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Planilla }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Planilla }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Planilla }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>