@model WebApplication1.Models.Planilla

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Crear Nueva Planilla</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Planilla</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                @Html.LabelFor(model => model.Fecha_Ingreso, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Fecha_Ingreso, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.Fecha_Ingreso, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Salario, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Salario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Salario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Especializacion, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(model => model.Especializacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Especializacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.Label("Empleado", htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-6">
                    @Html.DropDownList("Id_Empleado", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Empleado, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-9 offset-sm-3">
                    <input type="submit" value="Create" class="btn btn-primary mr-2" />
                    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    }
</div>