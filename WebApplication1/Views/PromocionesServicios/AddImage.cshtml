@model WebApplication1.Models.ImagenesPromosServ

@{
    ViewBag.Title = "AddImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddImage</h2>

@using (Html.BeginForm("AddImage", "PromocionesServicios", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.Id_Promo_Servicio)

    <div>
        @Html.LabelFor(model => model.FileName)
        @Html.TextBoxFor(model => model.FileName)
    </div>
    <div>
        <input type="file" name="file" />
    </div>
    <input type="submit" value="Add Image" />
}