@model IEnumerable<WebApplication1.Models.Servicios_Productos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/serviciosproductos/serviciosproductos.css" rel="stylesheet" />
    <!-- Ajusta la ruta según la ubicación de tu archivo serviciosproductos.css -->
</head>

<h2>Administración de Servicios y Productos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Promo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio_Promo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categorias.Nombre_Categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Promo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio_Promo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>


    <td>
        <img src="@Url.Content("~/imagenes/ImagenesProductosServicios/" + item.FileName)" alt="Imagen" width="100" height="100" />

    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Categorias.Nombre_Categoria)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
