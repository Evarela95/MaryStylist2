@model IEnumerable<WebApplication1.Models.Empleados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="tit">
    <h1>Lista de Empleados</h1>
</section>

<body>
    <p class="crearBTN">
        @Html.ActionLink("Crear Nuevo Empleado", "Create")
    </p>
    <table class="form">
        <tr>
            <th class="atributos">
                @Html.DisplayNameFor(model => model.Nombre_Empleado)
            </th>
            <th class="atributos">
                @Html.DisplayNameFor(model => model.Apellido_Empleado)
            </th>
            <th class="atributos">
                @Html.DisplayNameFor(model => model.Descripcion_Empleado)
            </th>
            <th class="atributos">
                @Html.DisplayNameFor(model => model.Correo_Empleado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td class="atributos">
                    @Html.DisplayFor(modelItem => item.Nombre_Empleado)
                </td>
                <td class="atributos">
                    @Html.DisplayFor(modelItem => item.Apellido_Empleado)
                </td>
                <td class="atributos">
                    @Html.DisplayFor(modelItem => item.Descripcion_Empleado)
                </td>
                <td class="atributos">
                    @Html.DisplayFor(modelItem => item.Correo_Empleado)
                </td>
                <td class="links">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_Empleado }, new { @class = "btn btn-primary btn-sm" }) |
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_Empleado }, new { @class = "btn btn-indo btn-sm" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Empleado }, new { @class = "btn btn-danger btn-sm" }) |
                    @Html.ActionLink("Imagen", "EmpleadoImagen", new { id = item.Id_Empleado }, new { @class = "btn btn-warning btn-sm" })|
                    @Html.ActionLink("Planilla", "Planilla", new { id = item.Id_Empleado, nombre = item.Nombre_Empleado, apellido = item.Apellido_Empleado }, new { @class = "btn btn-success btn-sm" })

                </td>
            </tr>
        }
    </table>
</body>