@model WebApplication1.Models.Empleados

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="titEmp">
    <h1>Crear nuevo empleado</h1>
</section>

<form method="post" enctype="multipart/form-data" class="formEmp">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre_Empleado, htmlAttributes: new { @class = "texto" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre_Empleado, new { htmlAttributes = new { @class = "formCampo" } })
                @Html.ValidationMessageFor(model => model.Nombre_Empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Apellido_Empleado, htmlAttributes: new { @class = "texto" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Apellido_Empleado, new { htmlAttributes = new { @class = "formCampo" } })
                @Html.ValidationMessageFor(model => model.Apellido_Empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion_Empleado, htmlAttributes: new { @class = "texto" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion_Empleado, new { htmlAttributes = new { @class = "formCampo" } })
                @Html.ValidationMessageFor(model => model.Descripcion_Empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Correo_Empleado, htmlAttributes: new { @class = "texto" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Correo_Empleado, new { htmlAttributes = new { @class = "formCampo" } })
                @Html.ValidationMessageFor(model => model.Correo_Empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="botones">
            <input type="submit" value="Crear" class="btnCrear" />
            @Html.ActionLink("Atrás", "Index")
        </div>
    </div>
}
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
