@model IEnumerable<WebApplication1.Models.Citas>

@{
    ViewBag.Title = "TodasLasCitas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br><br><br>
<p>
    @Html.ActionLink("Atrás", "Index")
</p>

<h2>Todas las citas</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Cita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora_Cita)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUsers.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.Nombre_Empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servicios_Productos.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servicios_Productos.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servicios_Productos.Precio_Promo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha_Cita)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Hora_Cita)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Estado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Empleados.Nombre_Empleado)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servicios_Productos.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servicios_Productos.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Servicios_Productos.Precio_Promo)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cita }) |
        @Html.ActionLink("Detalles", "Details", new { id = item.Id_Cita }) |
        @Html.ActionLink("Cancelar", "Delete", new { id = item.Id_Cita })
    </td>
</tr>
}

</table>
