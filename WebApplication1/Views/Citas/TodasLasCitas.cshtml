@model IEnumerable<WebApplication1.Models.Citas>

@{
    ViewBag.Title = "TodasLasCitas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="text-center">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <h2>Todas las citas</h2>
            </div>
        </div>

        <div class="text-center">
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <label for="search">Buscar:</label>
                    <input type="text" id="search" class="form-control search-input" oninput="filterTable()" />
                </div>
            </div>
        </div>

        <br />
        <table class="table">
            <tr>
                <th class="text-center">Fecha</th>
                <th class="text-center">Hora</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Usuario</th>
                <th class="text-center">Empleado</th>
                <th class="text-center">Servicio/Producto</th>
                <th class="text-center">Precio</th>
                <th class="text-center">Precio Promoción</th>
                <th class="text-center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Fecha_Cita)</td>
                    <td>@Html.DisplayFor(modelItem => item.Hora_Cita)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.AspNetUsers.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Empleados.Nombre_Empleado)</td>
                    <td>@Html.DisplayFor(modelItem => item.Servicios_Productos.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Servicios_Productos.Precio)</td>
                    <td>@Html.DisplayFor(modelItem => item.Servicios_Productos.Precio_Promo)</td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_Cita }, new { @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Cancelar", "Delete", new { id = item.Id_Cita }, new { @class = "btn btn-danger btn-sm" })
                        @Html.ActionLink("Finalizar", "FinalizarCita", new { id = item.Id_Cita }, new { @class = "btn btn-success btn-sm" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<style>
    .search-input {
        width: 100%; /* Para que ocupe el ancho del contenedor */
    }
</style>

<script>
    function filterTable() {
        var searchText = $('#search').val().toLowerCase();

        $('table tr').each(function () {
            var rowText = $(this).text().toLowerCase();
            $(this).toggle(rowText.indexOf(searchText) > -1);
        });
    }
</script>