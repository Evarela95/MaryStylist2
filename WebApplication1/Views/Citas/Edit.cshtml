@model WebApplication1.Models.Citas

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Editar Cita</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group row">
            @Html.HiddenFor(model => model.Id_Cita)
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Fecha</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Fecha_Cita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_Cita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Hora</label>
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Hora_Cita, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Hora_Cita, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Usuario</label>
            <div class="col-sm-6">
                @Html.DropDownList("Id_Usuario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Empleado</label>
            <div class="col-sm-6">
                @Html.DropDownList("Id_Empleado", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Empleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Servicio/Producto</label>
            <div class="col-sm-6">
                @Html.DropDownList("Id_Serv_Prod", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id_Serv_Prod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label">Estado</label>
            <div class="col-sm-1">
                <div class="form-check">
                    @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-check-input" } })
                    <label class="form-check-label">
                        Activo
                    </label>
                </div>
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Guardar" class="btn btn-primary mr-2" />
                <div class="btn btn-secondary">
                    @Html.ActionLink("Atrás", "Index", null, new { @style = "color: white;" })
                </div>
            </div>
        </div>

    }
</div>